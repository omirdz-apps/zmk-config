      // =========================
      // ENCODERS
      // =========================
      rgb_encoder: rgb_encoder {
         compatible = "zmk,behavior-sensor-rotate";
         #sensor-binding-cells = <0>;
         bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
      };

      scroll_encoder: scroll_encoder {
         compatible = "zmk,behavior-sensor-rotate";
         #sensor-binding-cells = <0>;
         bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;
         tap-ms = <100>;
      };

      // =========================
      // COMBOS
      // =========================
      combos {
         compatible = "zmk,combos";

         softoff {
               bindings = <&soft_off>;
               key-positions = <0 14 29>;
         };
      };
   
      // =========================
      // KEYMAP
      // =========================
      keymap {
         compatible = "zmk,keymap";

         // Capa base DVORAK
         default_layer {
            display-name = "DVORAK";
            bindings = <
               &kp ESC   &td_sdq  &td_clt  &td_dgt     &kp P      &td_y                          &kp UP                 &td_f        &kp G     &td_c   &kp R  &td_l  &kp BSPC
               &kp TAB   &td_a    &td_o    &td_e       &td_u      &td_i                &kp LEFT  &none      &kp RIGHT   &kp D        &kp H     &kp T   &td_n  &td_s  &kp ENTER
               &td_SHFT  &td_sc   &kp Q    &kp J       &td_k      &td_x      &kp C_PP            &kp DOWN               &kp B        &kp M     &kp W   &td_v  &td_z  &kp RSHIFT
                                           &kp LCTRL   &kp LGUI   &kp LALT                                              &kp SPACE    &kp RALT  &td_Layers
            >;
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
         };

         // FUNC | SYMB | NUM
         functions_layer {
            display-name = "FnSyNu";
            bindings = <
               &kp ESC     &kp F5   &kp F8   &kp GRAVE       &kp LBKT   &kp RBKT                         &kp PG_UP            &td_1  &td_2   &td_3   &kp INS   &kp LC(+)      &kp BSPC
               &kp TAB     &kp F10  &kp F11  &mac_comment    &kp SLASH  &kp EQUAL              &kp HOME  &none      &kp END   &td_4  &td_5   &td_6   &kp DEL   &kp LC(-)      &kp ENTER
               &kp LSHIFT  &kp F12  &none    &mac_uncomment  &kp MINUS  &kp BSLH   &kp C_MUTE            &kp PG_DN            &td_7  &td_8   &td_9   &td_0     &kp LG(SPACE)  &kp RSHIFT
                                                &kp LCTRL   &kp LGUI    &kp LALT                                              &kp SPACE     &kp RALT    &tog 1
            >;
            sensor-bindings = <&inc_dec_kp C_PREV C_NEXT>;
         };
         
         // SYSTEM
         system_layer {
            display-name = "SYSTEM";
            bindings = <
               &bt BT_CLR_AL    &bt BT_SEL 3     &bt BT_SEL 2     &bt BT_SEL 1     &bt BT_SEL 0     &bt BT_CLR                            &mmv MOVE_UP                   &none  &none  &none  &kp PRINTSCREEN  &kp SCROLLLOCK  &kp PAUSE_BREAK
               &rgb_ug RGB_ON   &rgb_ug RGB_EFF  &rgb_ug RGB_BRI  &rgb_ug RGB_SAI  &rgb_ug RGB_SPI  &out OUT_BLE                 &mmv MOVE_LEFT  &none  &mmv MOVE_RIGHT  &none  &none  &none  &none  &none  &kp K_APPLICATION
               &rgb_ug RGB_OFF  &rgb_ug RGB_EFR  &rgb_ug RGB_BRD  &rgb_ug RGB_SAD  &rgb_ug RGB_SPD  &out OUT_USB        &kp C_PP                 &mmv MOVE_DOWN          &none  &none  &none  &mkp LCLK  &mkp MCLK &mkp RCLK
                                                                  &bootloader      &sys_reset       &studio_unlock                                                       &none  &none  &tog 2
            >;
            sensor-bindings = <&scroll_encoder>;
         };
      };
   };